// Implementa hook_menu()
function smumm_menu(){
    // Menu de Administración
  $items['admin/structure/structure/supahmegaultramegamenu'] = array(
    'title' => t('Configuración de SMUMM (SupahMegaUltraMegaMenu)'),
    'description' => t('Configurar el módulo SMUMM'),
    'page callback' => 'drupal_get_form',
    'page arguments' => array('smumm_admin'),
    'access arguments' => array('administer smumm settings'),
    'type' => MENU_NORMAL_ITEM,
  );

  return $items;
}

//Formulario para administración de SMUMM
function smumm_admin ($form, &$form_state) {
  $los_menus = menu_get_menus(TRUE);
  print_r($los_menus);
  if (isset($GLOBALS['smumm_MenuElegido']) ) {
    print 'smumm_MenuElegido:';
    print_r($GLOBALS['smumm_MenuElegido']);
  }


  $form = array();

  $form['smumm_configure'] = array (
    '#title' => t('Menú'),
    '#type' => 'fieldset',
    '#description' => t('Datos del menu a usar'),
    '#collapsible' => TRUE,
    );

  $form['smumm_configure']['eligeMenu'] = array(
    '#type' => 'select',
    '#title' => t('Elige el menu a utilizar:'),
    '#default_value' => variable_get('smumm_MenuElegido',''),
    '#options' => $los_menus,
    '#description' => t('El menu que se mostrara en la pagina seleccionada'),
    );

  $form['smumm_configure']['eligePagina'] 
    '#type' => 'textfield',
    '#title' => t('Página destino'),
    '#default_value' => '',
    '#maxlength' => 127,
    '#description' => t('Nombre de la pagina que alojara el SMUMM'),
  );

  return system_settings_form($form);
}

